<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elmexicano.lsteamer.braintrainer.MainActivity">

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreTextView"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

    <TextView
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerTextView"
        android:layout_weight="1"
        android:layout_alignBaseline="@+id/scoreTextView"
        android:layout_alignBottom="@+id/scoreTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:text="QUIZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quiz"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/winLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:id="@+id/cong"
            android:textSize="40sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/sent"
            android:layout_below="@+id/cong">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You had "

                android:id="@+id/you_had"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="6"
                android:layout_toRightOf="@+id/cong"
                android:id="@+id/scorete"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" correct tries out of "

                android:layout_toRightOf="@+id/outof"
                android:id="@+id/outof"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="50"
                android:layout_toRightOf="@+id/scorete"
                android:id="@+id/totalte"
                android:textSize="20sp"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try again"
            android:layout_below="@+id/sent"
            android:layout_centerInParent="true"

            android:id="@+id/tryagain"
            android:textSize="40sp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:id="@+id/gameLayout"
        >

        <TextView
            android:text="01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/op1"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op1"
            android:id="@+id/op2"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op2"
            android:id="@+id/op3"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/op1"
            android:id="@+id/op4"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op4"
            android:layout_below="@+id/op2"
            android:id="@+id/op5"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op5"
            android:layout_below="@+id/op3"
            android:id="@+id/op6"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/op4"
            android:id="@+id/op7"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op7"
            android:layout_below="@+id/op5"
            android:id="@+id/op8"
            android:textSize="65sp"
            android:onClick="fillText" />

        <TextView
            android:text="09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op8"
            android:layout_below="@+id/op6"
            android:id="@+id/op9"
            android:textSize="65sp"
            android:onClick="fillText" />

    </RelativeLayout>

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:id="@+id/start"
        android:onClick="userStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultText"
        android:textSize="40sp"
        android:layout_alignTop="@+id/start"
        android:layout_centerHorizontal="true"
        android:text="WATWAT" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/start"
        android:layout_marginTop="90dp"
        android:id="@+id/introLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brain_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="26dp"
        android:id="@+id/brainIntro" />

    </RelativeLayout>

</RelativeLayout>
